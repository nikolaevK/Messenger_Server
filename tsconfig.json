{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
