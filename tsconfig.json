{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["dist/*"]
    },
    "noImplicitAny": false
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "dist"]
}
